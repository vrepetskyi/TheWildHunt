<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>

<GridPane
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="main.java.controllers.MainController">
	
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" />
	</columnConstraints>

	<rowConstraints>
		<RowConstraints vgrow="SOMETIMES" />
    	<RowConstraints vgrow="NEVER" />
  	</rowConstraints>
  	
  	<ScrollPane
  		fx:id="zoomScrollPane"
  		hbarPolicy="NEVER"
  		vbarPolicy="NEVER"
  		pannable="true">
	 		<Group fx:id="zoomContent" />
  	</ScrollPane>
  
	<AnchorPane GridPane.rowIndex="1">
		<MenuBar
			AnchorPane.leftAnchor="0"
			AnchorPane.rightAnchor="0">
			<Menu text="Simulation">
				<MenuItem text="Start" />
				<MenuItem text="Pause" />
				<MenuItem text="Reset" />
			</Menu>
			<Menu text="Add">
				<MenuItem text="Predator" />
				<MenuItem text="Prey" />
			</Menu>
			<Menu text="View">
				<MenuItem text="Predators" />
				<MenuItem text="Preys" />
				<MenuItem text="Junctions" />
				<MenuItem text="Destinations" />
			</Menu>
			<Menu text="About" />
		</MenuBar>
		
		<Label
			AnchorPane.topAnchor="5"
			AnchorPane.rightAnchor="10"
			text="coordinates, timer" />
	</AnchorPane>
</GridPane>